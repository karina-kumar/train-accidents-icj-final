{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ county_name }}{% endblock %}

{% block content %}
<div class="container">
<h1>{{ county_name }}</h1>
<p>Below are statistics about {{ county_name }} county in Texas and a table that includes all reported train accidents in this county.</p>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 mb-3 g-4">
  <div class="col">
  <div class="card text-center" style="height: 10rem;" >
    <div class="card-body">
      <h5 class="card-title ">Total Accidents</h5>
      <p class="card-text">{{ total_accidents }} </p>
    </div>
  </div>
  </div>
  <div class="col">
  <div class="card text-center" style="height: 10rem;" >
    <div class="card-body">
      <h5 class="card-title">Total Equipment Damage ($)</h5>
      <p class="card-text">{{ total_equip_damage }} </p>
    </div>
  </div>
  </div>
  <div class="col">
  <div class="card text-center" style="height: 10rem;" >
    <div class="card-body">
      <h5 class="card-title">Total Track Damage ($)</h5>
      <p class="card-text">{{ total_track_damage }} </p>
    </div>
  </div>
  </div>
  <div class="col">
  <div class="card text-center" style="height: 10rem;" >
    <div class="card-body">
      <h5 class="card-title">Total Injuries </h5>
      <p class="card-text">{{ total_injuries }} </p>
    </div>
  </div>
  </div>
  <div class="col">
  <div class="card text-center" style="height: 10rem;">
    <div class="card-body">
      <h5 class="card-title">Total Deaths</h5>
      <p class="card-text">{{ total_deaths }} </p>
    </div>
  </div>
  </div>
</div>

<div class = "col">
  <table class="table table-striped table-hover table-bordered table-sm">
      <thead>
        <tr>
          
          <th scope="col">County Name</th>
          <th scope="col">Accident Date</th>
          <th scope="col">Accident Number</th>
          <th scope="col">Accident Type</th>
          <th scope="col">Equipment Damage($)</th>
          <th scope="col">Track Damage($)</th>
          <th scope="col">Desc of Cause</th>
          <th scope="col"># Injured</th>
          <th scope="col"># Killed</th>
        </tr>
      </thead>
      <tbody>
        {% for event in accidents.train_accidents_texas %}
          {% if event.county_name == county_name %}
            <tr>
              <td>{{ event.county_name }} </td>
              <td>{{ event.accident_date }}</td>
              <td>{{ event.accident_number }}</td>
              <td>{{ event.accident_type }}</td>
              <td>{{ event.equip_damage }}</td>
              <td>{{ event.track_damage }}</td>
              <td>{{ event.desc_cause }}</td>
              <td>{{ event.injured }}</td>
              <td>{{ event.killed }}</td>
            </tr>
          {% endif %}
        {% endfor %}
      </tbody>
  </table>
</div>
</div>
{% endblock %}